/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/viralmetagenome -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h',
    ]
}

params {
    config_profile_name        = 'Test failed reference pool database profile'
    config_profile_description = 'Minimal test dataset to check pipeline function with a reference pool without matches'

    // Input data
    input                      = params.pipelines_testdata_base_path + 'viralmetagenome/samplesheets/samplesheet.csv'
    outdir                     = "testing"
    metadata                   = params.pipelines_testdata_base_path + 'viralmetagenome/samplesheets/metadata_test.tsv'

    skip_complexity_filtering  = false
    trim_tool                  = 'fastp'
    skip_hostremoval           = true
    assemblers                 = 'spades'
    skip_sspace_basic          = false
    skip_iterative_refinement  = true

    skip_read_classification   = true
    kaiju_db                   = params.pipelines_testdata_base_path + 'viralmetagenome/db/kaiju.tar.gz'
    reference_pool             = params.pipelines_testdata_base_path + 'viralmetagenome/db/ebov-zaire.fasta'
    annotation_db              = params.pipelines_testdata_base_path + 'viralmetagenome/db/virosaurus90_vertebrate-20200330.subset.fas.gz'

    skip_variant_calling       = true
    intermediate_mapping_stats = true
    skip_checkv                = true
}

process {
    maxRetries = 1
}
