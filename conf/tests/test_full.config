/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/viralmetagenome -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}


params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data
    input     = params.pipelines_testdata_base_path + 'viralmetagenome/samplesheets/samplesheet_full.csv'
    outdir    = "testing"
    metadata  = params.pipelines_testdata_base_path + 'viralmetagenome/samplesheets/metadata_testfull.tsv'
    prefix    = 'test'

    skip_complexity_filtering   = false
    trim_tool                   = 'fastp'
    host_k2_db                  = params.pipelines_testdata_base_path + 'viralmetagenome/db/kraken2_hs22.tar.gz'
    skip_sspace_basic           = false
    assemblers                  = 'megahit,trinity,spades'

    skip_read_classification    = true
    save_databases              = false
    kaiju_db                    = params.pipelines_testdata_base_path + 'viralmetagenome/db/kaiju.tar.gz'
    reference_pool              = params.pipelines_testdata_base_path + 'viralmetagenome/db/sarscov2.fasta'

    mapping_constraints         = params.pipelines_testdata_base_path + 'viralmetagenome/samplesheets/mapping_constraints.csv'
    checkv_db                   = params.pipelines_testdata_base_path + 'viralmetagenome/db/checkv_minimal_db.tar'
    prokka_db                   = params.pipelines_testdata_base_path + 'viralmetagenome/db/U-RVDBv29.0-prot_clustered.subset.fasta.xz'

    save_intermediate_polishing = true
    min_mapped_reads            = 100
    intermediate_mapping_stats  = true
}

process {
    maxRetries    = 1
}
