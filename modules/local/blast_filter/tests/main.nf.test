                input[2] = [ [id:'test'], file(params.pipelines_testdata_base_path + 'local_modules/blast_filter/HIV.blacklist.txt', checkIfExists: true) ]
                input[3] = [ [id:'test'], file(params.pipelines_testdata_base_path + 'db/HIV.fasta', checkIfExists: true) ]
