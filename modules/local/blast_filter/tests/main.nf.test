nextflow_process {

    name "Test Process BLAST_FILTER"
    script "../main.nf"
    process "BLAST_FILTER"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "blast"
    tag "blast/filter"

    test("HIV contigs - fasta  ") {

        when {
            process {
                """
                input[0] = [ [id:'test'], file(params.pipelines_testdata_base_path + 'local_modules/blast_filter/HIV.blast.out.txt', checkIfExists: true) ]
                input[1] = [ [id:'test'], file(params.pipelines_testdata_base_path + 'illumina/HIV.contigs.fasta', checkIfExists: true) ]
                input[2] = [ [],  []]
                input[3] = [ [id:'test'], file(params.pipelines_testdata_base_path + 'db/HIV.fasta', checkIfExists: true) ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

